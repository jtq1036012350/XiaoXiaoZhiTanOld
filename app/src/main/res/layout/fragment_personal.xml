<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <data>

    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <include layout="@layout/view_headlayout"/>

        <RelativeLayout
            android:id="@+id/rl_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ll_background"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:background="@mipmap/ic_launcher"
                android:scaleType="fitXY">
            </ImageView>


        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/colorTitleBlack"></LinearLayout>

                    <com.iguitar.xiaoxiaozhitan.ui.view.CircleImageView
                        android:id="@+id/iv_user"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="0dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/myicon"/>

                    <TextView
                        android:id="@+id/tv_user_name"
                        style="@style/TextStyle"
                        android:layout_alignTop="@+id/iv_user"
                        android:layout_marginTop="26dp"
                        android:layout_toLeftOf="@+id/view_line"
                        android:layout_toStartOf="@+id/view_line"
                        android:text="小小迷"
                        android:textColor="@color/colorTitleWhite"
                        android:textSize="25sp"/>

                    <TextView
                        android:id="@+id/tv_press"
                        style="@style/TextStyle"
                        android:layout_alignLeft="@+id/textView"
                        android:layout_alignStart="@+id/textView"
                        android:layout_below="@+id/tv_user_name"
                        android:text="沉迷练琴"/>

                    <ImageView
                        android:id="@+id/view_line"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/tv_press"
                        android:layout_alignTop="@+id/tv_press"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/tv_press"
                        android:background="#0000ff"/>

                    <TextView
                        style="@style/TextStyle"
                        android:layout_alignBottom="@+id/tv_press"
                        android:layout_alignTop="@+id/tv_press"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/view_line"
                        android:text="日渐消瘦"/>

                    <TextView
                        android:id="@+id/textView"
                        style="@style/TextStyle"
                        android:layout_below="@+id/tv_press"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/iv_user"
                        android:text="版本： 1.0"/>
                </RelativeLayout>

                <View
                    style="@style/LineStyle"
                    android:layout_marginTop="20dp"
                    />

                <TextView
                    android:id="@+id/tv_first_qq_unit"
                    style="@style/ListPersonal"
                    android:text="交流一群:  422068207"/>

                <View
                    style="@style/LineStyle"
                    />

                <TextView
                    android:id="@+id/tv_second_qq_unit"
                    style="@style/ListPersonal"
                    android:text="交流二群:  518544404"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/pop_select"
                    />

                <TextView
                    android:id="@+id/tv_third_qq_unit"
                    style="@style/ListPersonal"
                    android:text="交流三群:  607455254"/>

                <View
                    style="@style/LineStyle"
                    />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</layout>
